<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
"http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
	<constant name="struts.devMode" value="false" />
	<constant name="struts.i18n.encoding" value="utf-8" />
	<constant name="struts.i18n.decoding" value="utf-8" />
	<!-- 在包中导入struts自带的配置文件 -->
	<include file="struts-default.xml" />
	<!-- 配置自定义的action -->

	<package name="default" extends="struts-default">
		<global-results>
			<result name="error">/404.html</result>
		</global-results>
	</package>

	<package name="NewsAction" extends="struts-default">

		<action name="index" class="NewsAction.newsAction">
			<result name="success">index.jsp</result>
		</action>

		<action name="hot" class="NewsAction.hotNewsAction">
			<result name="success">hot.jsp</result>
		</action>

		<action name="society" class="NewsAction.societyNewsAction">
			<result name="success">soceity.jsp</result>
		</action>


		<action name="politics" class="NewsAction.politicsNewsAction">
			<result name="success">politics.jsp</result>
		</action>

		<action name="finance" class="NewsAction.financeNewsAction">
			<result name="success">finance.jsp</result>
		</action>

		<action name="military" class="NewsAction.militaryNewsAction">
			<result name="success">military.jsp</result>
		</action>


		<action name="education" class="NewsAction.educationNewsAction">
			<result name="success">education.jsp</result>
		</action>

		<action name="sicence" class="NewsAction.sicenceNewsAction">
			<result name="success">sicence.jsp</result>
		</action>


		<action name="games" class="NewsAction.gamesNewsAction">
			<result name="success">games.jsp</result>
		</action>

		<action name="sports" class="NewsAction.sportsNewsAction">
			<result name="success">sports.jsp</result>
		</action>

		<action name="entertainment" class="NewsAction.entertainmentNewsAction">
			<result name="success">entertainment.jsp</result>
		</action>
		
		<action name="search" class="NewsAction.searchNewsAction">
			<result name="success">searchResult.jsp</result>
		</action>

	</package>
</struts>